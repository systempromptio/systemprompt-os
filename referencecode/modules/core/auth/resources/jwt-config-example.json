{
  "name": "JWT Configuration Example",
  "description": "Example configuration for JWT authentication",
  "uri": "module://auth/resources/jwt-config-example",
  "config": {
    "algorithm": "RS256",
    "issuer": "https://api.example.com",
    "audience": "https://api.example.com",
    "expiresIn": "1h",
    "refreshExpiresIn": "7d",
    "tokenClaims": {
      "standard": ["sub", "iat", "exp", "iss", "aud"],
      "custom": ["userId", "roles", "permissions"]
    },
    "security": {
      "requireHttps": true,
      "clockTolerance": 30,
      "maxAge": 86400
    },
    "headers": {
      "kid": "2024-01-key",
      "typ": "JWT"
    }
  },
  "metadata": {
    "tags": ["jwt", "configuration", "example"],
    "version": "1.0.0",
    "lastUpdated": "2024-01-15"
  }
}