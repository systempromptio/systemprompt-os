# Server Configuration
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# State Directory Configuration
# Where to store logs, metrics, and runtime data
STATE_DIR=./state

# Logging Configuration
LOG_LEVEL=info           # debug, info, warn, error
LOG_MAX_SIZE=10m        # Max size before rotation
LOG_MAX_FILES=7         # Number of rotated files to keep

# OAuth2 Configuration
JWT_SECRET=change-this-in-production
JWT_ISSUER=systemprompt-os
JWT_AUDIENCE=systemprompt-os-clients
ACCESS_TOKEN_EXPIRY=1h
REFRESH_TOKEN_EXPIRY=30d
AUTHORIZATION_CODE_EXPIRY=10m

# Security Configuration
BCRYPT_ROUNDS=10

# Path Configuration
CONFIG_PATH=./config

# OAuth2 Provider Configuration (Optional)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret