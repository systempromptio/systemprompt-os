{
  "compilerOptions": {
    // Modern Node.js ESM configuration
    "target": "ES2022",
    "module": "Node16",
    "lib": ["ES2022"],
    "moduleResolution": "Node16",
    
    // Output configuration
    "outDir": "./build",
    "rootDir": "src",
    
    // Type checking
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    
    // Decorators for TypeDI
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    // Code quality
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    
    // Source maps and declarations
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    
    // Path aliases
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@cli/*": ["src/cli/*"],
      "@server/*": ["src/server/*"],
      "@modules/*": ["src/modules/*"],
      "@tools/*": ["src/tools/*"],
      "@services/*": ["src/services/*"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "dist", "scripts", "tests"]
}